<% layout("layout/boilerplate") %>

<div class="container mt-5 py-5">
  <!-- Heading Section -->
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
    <p class="lead text-muted mb-4">
      Weâ€™re here to assist you. Reach out to us through any of the methods
      below!
    </p>
  </div>

  <!-- Contact Information and Office Hours Section -->
  <div class="row g-4">
    <!-- Contact Information -->
    <div class="col-lg-6">
      <div class="card border-light shadow-sm rounded-3">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Contact Information</h3>
          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-envelope-fill fs-4 me-3"></i>
            <div>
              <strong>Email : </strong>
              <a href="mailto:support@vyvsai.com" class="text-decoration-none"
                >support@vyvsai.com</a
              >
            </div>
          </div>
          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-phone-fill fs-4 me-3"></i>
            <div>
              <strong>Phone : </strong>
              <a href="tel:+919773988392" class="text-decoration-none"
                >+91 9773988392</a
              >
            </div>
          </div>
          <div class="d-flex align-items-center">
            <i class="bi bi-geo-alt-fill fs-4 me-3"></i>
            <div>
              <strong>Address:</strong>
              <p class="mb-0">
                IIF Centre of Incubation, 8th Floor, Bawana, Delhi (110042)
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Office Hours -->
    <div class="col-lg-6">
      <div class="card border-light shadow-sm rounded-3">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Office Hours</h3>
          <p class="mb-3 d-flex align-items-center">
            <i class="bi bi-clock-fill fs-4 me-3"></i>
            <strong>Monday to Friday : </strong>9:00 AM - 6:00 PM IST
          </p>
          <p class="mb-0 d-flex align-items-center">
            <i class="bi bi-clock-history fs-4 me-3"></i>
            We aim to respond to all inquiries within 24 hours during business
            days.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Form Section -->
  <div class="mt-5">
    <h3 class="text-center fw-bold mb-4">Get in Touch</h3>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form action="/get-in-touch" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="4"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Follow Us Section -->
  <div class="text-center mt-5">
    <h3 class="fw-bold text-primary mb-3">Follow Us</h3>
    <p class="lead text-muted mb-4">Stay connected with us on social media:</p>
    <a
      href="https://www.linkedin.com/company/monoxosvyvsai-pvt-lmt/"
      class="btn btn-outline-primary btn-lg d-inline-flex align-items-center"
      style="transition: background-color 0.3s, color 0.3s"
    >
      <img
        src="images/linkdin-logo.svg"
        alt="LinkedIn"
        class="me-2"
        style="max-width: 40px"
      />
      LinkedIn
    </a>
  </div>
</div>

<!-- Include Bootstrap Icons -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
  rel="stylesheet"
/>

<!-- Custom Styles -->
<style>
  .card {
    background-color: #f9f9f9;
  }
  .btn-outline-primary:hover {
    background-color: #007bff;
    color: #fff;
  }
</style>
