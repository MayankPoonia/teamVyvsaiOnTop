<% layout("layout/boilerplate") %> <% if(success && success.length) {%>
<div class="alert alert-success"><%=success %></div>
<% } %>
<div class="container mt-5 pt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Verify OTP</h1>
      <form
        action="/password-reset/verify-otp"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="otp" class="form-label">Enter the OTP:</label>
          <input
            type="text"
            id="otp"
            name="otp"
            class="form-control"
            placeholder="Enter OTP"
            required
          />
          <% if (errorMessages.length) { %>
          <div class="invalid-feedback"><%= errorMessages[0].msg %></div>
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
      </form>
    </div>
  </div>
</div>
