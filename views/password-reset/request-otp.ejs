<% layout("layout/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Reset Password</h1>
      <form action="/password-reset/request-otp" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label">Enter your registered Email or Phone Number:</label>
          <input
            type="text"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            required
          />
          <% if (errorMessages.length) { %>
            <div class="invalid-feedback">
              <%= errorMessages[0].msg %>
            </div>
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary w-100">Get OTP</button>
      </form>
    </div>
  </div>
</div>